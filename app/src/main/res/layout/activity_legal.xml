<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LegalActivity">

    <RelativeLayout
        android:id="@+id/legal_detail_header"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true">

        <TextView
            android:id="@+id/legal_activity_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/darkBlue"
            android:paddingBottom="8dp"
            android:paddingEnd="24dp"
            android:paddingStart="56dp"
            android:paddingTop="8dp"
            android:text="@string/copyright_and_usage"
            android:textColor="@android:color/white"
            android:textSize="24sp"/>

        <Button
            android:id="@+id/legal_back_button"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_marginStart="12dp"
            android:layout_marginTop="8dp"
            android:background="@drawable/ic_sharp_arrow_back_24px"
            android:backgroundTint="@android:color/white"
            android:gravity="center_vertical"/>

    </RelativeLayout>

    <TextView
        android:id="@+id/Apache_legal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/legal_detail_header"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="4dp"
        android:text="Apache License Version 2.0, January 2004"
        android:textSize="16sp"
        android:textStyle="bold"/>

    <TextView
        android:id="@+id/Picasso_legal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/Apache_legal"
        android:layout_centerHorizontal="true"
        android:text="Picasso, Copyright 2013 Square, Inc."
        android:textSize="14sp"/>

    <TextView
        android:id="@+id/Gson_legal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/Picasso_legal"
        android:layout_centerHorizontal="true"
        android:text="Gson, Copyright 2008 Google, Inc."
        android:textSize="14sp"/>

    <TextView
        android:id="@+id/RxAndroid_legal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/Gson_legal"
        android:layout_centerHorizontal="true"
        android:text="RxAndroid, Copyright 2015 The RxAndroid authors"
        android:textSize="14sp"/>

    <TextView
        android:id="@+id/RxJava_legal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/RxAndroid_legal"
        android:layout_centerHorizontal="true"
        android:text="RxJava, Copyright 2013 Netflix, Inc."
        android:textSize="14sp"/>

    <TextView
        android:id="@+id/OkHttp_legal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/RxJava_legal"
        android:layout_centerHorizontal="true"
        android:text="OkHttp, Copyright 2016 Square, Inc."
        android:textSize="14sp"/>

    <TextView
        android:id="@+id/Phrase_legal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/OkHttp_legal"
        android:layout_centerHorizontal="true"
        android:text="Phrase, Copyright 2013 Square, Inc."
        android:textSize="14sp"/>

    <TextView
        android:id="@+id/Lottie_legal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/Phrase_legal"
        android:layout_centerHorizontal="true"
        android:text="Lottie, Copyright 2018 Airbnb, Inc."
        android:textSize="14sp"/>

    <TextView
        android:id="@+id/Liftie_legal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/Lottie_legal"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="12dp"
        android:layout_marginEnd="12dp"
        android:layout_marginStart="12dp"
        android:text="Liftie, Copyright (c) 2012 Damian Krzeminski All rights reserved.

THIS SOFTWARE IS PROVIDED BY THE COPYRIGHT HOLDERS AND CONTRIBUTORS 'AS IS' AND ANY EXPRESS OR IMPLIED WARRANTIES, INCLUDING, BUT NOT LIMITED TO, THE IMPLIED WARRANTIES OF MERCHANTABILITY AND FITNESS FOR A PARTICULAR PURPOSE ARE DISCLAIMED. IN NO EVENT SHALL THE COPYRIGHT HOLDER OR CONTRIBUTORS BE LIABLE FOR ANY DIRECT, INDIRECT, INCIDENTAL, SPECIAL, EXEMPLARY, OR CONSEQUENTIAL DAMAGES (INCLUDING, BUT NOT LIMITED TO, PROCUREMENT OF SUBSTITUTE GOODS OR SERVICES; LOSS OF USE, DATA, OR PROFITS; OR BUSINESS INTERRUPTION) HOWEVER CAUSED AND ON ANY THEORY OF LIABILITY, WHETHER IN CONTRACT, STRICT LIABILITY, OR TORT (INCLUDING NEGLIGENCE OR OTHERWISE) ARISING IN ANY WAY OUT OF THE USE OF THIS SOFTWARE, EVEN IF ADVISED OF THE POSSIBILITY OF SUCH DAMAGE."
        android:textSize="14sp"/>

</RelativeLayout>