<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="match_parent"
    android:layout_width="match_parent">

    <RelativeLayout
        android:id="@+id/detail_header"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true" >

        <TextView
            android:id="@+id/resort_name_title"
            android:background="@color/primaryColor"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingStart="56dp"
            android:paddingEnd="24dp"
            android:textSize="24sp"
            android:paddingTop="8dp"
            android:paddingBottom="8dp"/>

        <Button
            android:id="@+id/back_button"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_marginTop="8dp"
            android:layout_marginStart="12dp"
            android:gravity="center_vertical"
            android:background="@drawable/ic_sharp_arrow_back_24px"
            android:backgroundTint="@android:color/white"/>

    </RelativeLayout>

<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_below="@id/detail_header"
    android:scrollbars="none">

<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".ResortDetailActivity">

    <View
        android:id="@+id/vertical_divider"
        android:layout_width="1dp"
        android:layout_height="80dp"
        android:layout_marginTop="4dp"
        android:layout_marginBottom="4dp"
        android:layout_centerHorizontal="true"
        android:background="@color/primaryLightColor"/>

    <View
        android:id="@+id/horizontal_divider"
        android:layout_below="@id/vertical_divider"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginBottom="4dp"
        android:background="@color/primaryLightColor"/>

    <TextView
        android:id="@+id/lift_status_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/horizontal_divider"
        android:layout_marginLeft="8dp"
        android:textSize="18sp"
        android:text="Lifts:"
        />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/lift_status"
        android:layout_below="@id/lift_status_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

</RelativeLayout>

</ScrollView>

</RelativeLayout>